{
    "manifest_version": 3,
    "name": "Big Cursor Mode",
    "version": "1.0",
    "description": "Toggle a huge cursor on any webpage.",
    "permissions": ["activeTab", "scripting"],
    "action": {},
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["cursor.css"]
      }
    ]
  }